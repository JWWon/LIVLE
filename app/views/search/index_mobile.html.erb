<div id="search-index-mobile">
  <div class="search-input-container _vcenter-positioner">
    <%= form_tag search_search_path, remote: true do %>
        <div class="search-input-field _vcenter-positioner">
          <div class="input-icon-container _hright-positioner">
            <%= image_tag "icon_search_gray", class: "input-icon" %>
          </div>
          <%= text_field_tag :term, nil, class: "input-field _fs-3-mobile _white", rows: "1", placeholder: "검색" %>
          <%= image_tag "icon_esc", class: "input-esc", style: "display: none" %>
        </div>
        <!--<= submit_tag "Search" %>-->
    <% end %>
  </div>

  <div id="search-list-container">
    <%= render partial: "search_card_mobile", collection: @feeds, as: :feed %>
  </div>

  <div id="infinite-scrolling">
    <%= will_paginate @feeds %>
  </div>
</div>