<div id="search-result-mobile">
  <%= render partial: "search_bar_mobile" %>

  <div class="selector-container _row-positioner">
    <div class="button-container _hcenter-positioner" id="feeds-selector">
      <p class="_fs-1-mobile _white">Feed(<%= @feed_results.size %>)</p>
    </div>
    <div class="button-container _hcenter-positioner" id="upcomings-selector">
      <p class="_fs-1-mobile _white">Upcoming(<%= @upcoming_results.size %>)</p>
    </div>
  </div>

  <div id="result-list-feed">
    <%= render partial: "feed_card_mobile", collection: @feed_results, as: :feed %>
  </div>
  <div id="result-list-upcoming">
    <%= render partial: "upcoming_card_mobile", collection: @upcoming_results, as: :upcoming %>
  </div>
</div>

<script>
    $('.input-field').val("<%= @search %>");
    $('.cancel-field').click(function () {
        window.location = "<%= search_path %>";
    });

    $('#feeds-selector').click(function () {
        renderResult("feed")
    });
    $('#upcomings-selector').click(function () {
        renderResult("upcoming")
    });

    function renderResult(params) {
      if(params === "feed") {
          $('#result-list-feed').show();
          $('#result-list-upcoming').hide();
      } else {
          $('#result-list-feed').hide();
          $('#result-list-upcoming').show();
      }
    }
</script>