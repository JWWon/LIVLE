<div id="feed-index-card">
  <%= link_to feed_path(feed.id) do %>
      <div class="_thumbnail-image-container">
        <%= thumbnail_tag feed.youtube_id %>
        <% if @show_curator %>
            <div class="thumbnail-filter _no-p-margin _vbottom-positioner">
              <div class="thumbnail-content _vcenter-positioner">
                <%= image_tag feed.is_curation ? "icon_crown_gold" : "icon_crown",
                              class: "_video-info-icon _crown-icon-margin" %>
                <p class="_fs-5 _white _white-space-nowrap"><%= feed.user.nickname %></p>
              </div>
            </div>
        <% end %>
      </div>

      <div class="_text-container _no-p-margin">
        <p class="_fs-4 _white">
          <%= feed.title %> -
          <!-- artist name -->
          <% feed.artists.each_with_index do |artist, i| %>
              <%= artist.name %>
              <% break if feed.artists[i+1] == nil %>
              ,&nbsp
          <% end %>
        </p>
        <p class="_fs-5 _light-gray">조회수 <%= feed.count_view %></p>
      </div>
  <% end %>
</div>
