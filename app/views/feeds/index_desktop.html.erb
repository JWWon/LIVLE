<header>
  <div class="row">
    <div class="col-xs-offset-4 col-xs-4">
      <div class="text-center">
        <h1>LIVLE</h1>
      </div>
    </div>
  </div>
</header>

<section id="feed-list-container">
  <!-- Ruby Code -->
  <% f_index = 0 %>
  <% @curations.each do |curation| %>
    <%= render partial: "curations/curation_card_desktop", locals: {curation: curation} %>
    <% rand_num = rand(2) + 2 %>
    <% f_count = 0 %>

    <% while (f_index < @feeds.size) %>
      <%= render partial: "index_card_desktop", locals: {feed: @feeds[f_index]} %>
      <% f_index += 1 %>
      <% f_count += 1 %>

      <% unless f_count < rand_num %>
        <% break %>
      <% end %>
    <% end %>
  <% end %>
</section>

<div id="infinite-scrolling">
  <%= will_paginate @feeds %>
</div>

<!-- Bottom Navbar -->
<%= render partial: "partial_views/bottom_navbar_desktop" %>
