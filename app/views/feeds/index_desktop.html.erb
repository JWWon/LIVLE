<div id="feeds-index">
  <% @disable_nav = true %>
  <div class="curation-container">
    <%= render partial: "index_official_desktop", locals: {feed: @officials.sample} %>
  </div>

  <div class="feed-container _hcenter-positioner">
    <div class="feed-list-container">
      <div class="current-list _vcenter-positioner" id="scroll-target">
        <% @show_curator = true %>
        <% @feeds.each_with_index do |feed, i| %>
            <% if i % 2 != 0 && @feeds[i+1] != nil %>
                <div class="_column-positioner">
                  <div class="card-container">
                    <%= render partial: "index_card_desktop", locals: {feed: @feeds[i]} %>
                  </div>
                  <div class="card-container">
                    <%= render partial: "index_card_desktop", locals: {feed: @feeds[i+1]} %>
                  </div>
                </div>
            <% end %>
        <% end %>

        <div class="_display-none" id="infinite-scrolling">
          <%= will_paginate @feeds %>
        </div>
      </div>

      <div id="prev-btn">
        <div class="prev-list _vcenter-positioner _hcenter-positioner">
          <%= image_tag "icon_back" %>
        </div>
      </div>
      <div class="next-list _vcenter-positioner _hcenter-positioner">
        <%= image_tag "icon_next" %>
      </div>
    </div>
  </div>
</div>