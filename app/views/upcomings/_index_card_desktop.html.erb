<div id="upcoming-index-card">
  <%= link_to upcoming_path(upcoming.id), method: :get do %>
      <div class="_thumbnail-image-container">
        <%= image_tag get_thumbnail_image(upcoming.main_video_id), class: "_thumbnail-image" %>
      </div>
      <div class="_text-container _no-p-margin">
        <p class="_fs-4 _white">
          <%= upcoming.title %> -
          <!-- artist name -->
          <% upcoming.artists.each_with_index do |artist, i| %>
              <%= artist.name %>
              <% break if upcoming.artists[i+1] == nil %>
              ,&nbsp
          <% end %>
        </p>
        <p class="_fs-5 _light-gray">D<%= upcoming.d_day %></p>
      </div>
  <% end %>
</div>