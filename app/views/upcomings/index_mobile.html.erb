<div id="upcoming-index-mobile">
  <div class="_logo-background _hcenter-positioner">
    <%= image_tag "logo_livle", class: "_logo-container-m" %>
  </div>

  <div class="_cards-group-container-m" id="upcomings-card-list-m">
    <%= render partial: "index_card_mobile", collection: @upcomings, as: :upcoming %>
  </div>

  <div id="infinite-scrolling" class="_display-none">
    <%= will_paginate @upcomings %>
  </div>
</div>

<script>
$(".ticket-item").on("click", function(event){
  if(!$(event.target).hasClass('upcoming-icon')) {
    window.location = $(this).data('location');
  }
});
$(".upcoming-icon").on('click', function(e) {
  $(this).attr('src',
  ($(this).hasClass('filled') ? '<%=image_path "icon_hand_empty"%>' : '<%=image_path "icon_hand_filled"%>') );
  $(this).toggleClass('filled');
});
</script>
