          <% else %>
              <%= image_tag "icon_ticket_empty", class: "_navbar-icon" %>
          <% end %>
      <% end %>
    </div>
    <div class="_navbar-button-container">
      <%= link_to connect_urls_path do %>
          <% if control == 'ConnectUrlsController' %>
              <%= image_tag "icon_connect_filled", class: "_navbar-icon" %>
          <% else %>
              <%= image_tag "icon_connect_empty", class: "_navbar-icon" %>
          <% end %>
      <% end %>
    </div>
    <!-- TODO: Modal 띄우는거 고민해보자.. -->
    <div class="_navbar-button-container">
      <div id="navbar-login-button">
        <p class="_fs-3 _white">로그인</p>
