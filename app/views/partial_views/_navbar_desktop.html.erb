<nav class="_vcenter-positioner _navbar">
  <% control = controller.class.name.split("::").first.to_s %>
  <!-- search-bar -->
  <div class="_hcenter-positioner">
    <%= form_tag search_result_path, method: :get, class: "_navbar-serach-container"  do %>
