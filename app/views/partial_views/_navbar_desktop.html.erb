          <div class="_navbar-search-icon-container _hright-positioner">
            <%= image_tag "icon_search_gray", class: "_navbar-search-icon" %>
          </div>
          <%= text_field_tag :search, nil, class: "_navbar-search-input _fs-4 _white", placeholder: "검색하기" %>
