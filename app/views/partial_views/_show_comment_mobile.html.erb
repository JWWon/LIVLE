<div class="_show-comments-m">
  <% model = belongs_to.class == Feed ? FeedComment : (belongs_to.class == Upcoming ? UpcomingComment : nil ) %>
  <%= form_for [belongs_to, model.new], remote: true do |f| %>
      <div class="_row-positioner">
        <div class="_profile-container-m">
          <%= image_tag user_signed_in? ? current_user.profile_img : "", class: "_profile-img" %>
        </div>
        <div class="_comment-edit-container-m _vcenter-positioner _flex-grow-1 _no-p-margin">
          <div class="input-container _vcenter-positioner">
            <%= f.text_area :content, class: "autosize input-text _fs-4-mobile _white _flex-grow-1", rows: 1 ,
                            placeholder: user_signed_in? ? "댓글을 입력해주세요!" : "로그인 후 작성할 수 있습니다" %>
            <div class="submit-container">
              <%= f.submit "게시", class: "_no-background-border _fs-4-mobile _light-green _f-letter-mobile" %>
            </div>
          </div>
        </div>
      </div>
  <% end %>

  <div class="_comments-group-m">
    <%= render partial: "partial_views/comment_card_mobile", collection: comments.order('created_at DESC'), as: :comment %>
  </div>
</div>
<div style="padding: 4rem 0; width: 100%;"></div>
