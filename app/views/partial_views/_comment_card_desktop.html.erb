<div class="_comment-container _vcenter-positioner _no-p-margin">
  <div class="_comment-profile-container">
    <%= image_tag comment.user.profile_img, class: "_profile-img" %>
  </div>
  <p class="_fs-4 _white"><%= comment.user.nickname %></p>
  <div class="_comment-created-time-container">
    <p class="_fs-5 _light-gray"><%= comment.created_time %></p>
  </div>
  <div class="_comment-content-container _flex-grow-1 _row-positioner">
    <%= simple_format comment.content, class: "_fs-4 _white _flex-grow-1" %>
    <% if user_signed_in? %>
        <% if comment.user.id == current_user.id %>
            <div class="_comment-edit-container" id="comment-edit-<%= comment.id %>">
              <%= image_tag "icon_menu", class: "_comment-icon" %>
            </div>
        <% end %>
    <% end %>
  </div>
  <script>
      //TODO: js.erb나 js 파일로 옮기기!
      $button = $('#comment-edit-<%= comment.id %>');
      $button.on('click', function () {
          $('._comment-edit-container').append(
              '<div class="_comment-edit-modal _desktop-small-modal">\n' +
                '<div class="_column-positioner _vcenter-positioner">\n' +
                  '<%= link_to comment.model.to_s == 'FeedComment' ? "/feeds/#{comment.parent_id}/feed_comments/#{comment.id}" :
                   "/upcomings/#{comment.parent_id}/upcoming_comments/#{comment.id}", method: :delete do %>' +
                      '<p class="_fs-3 _black">삭제</p>' +
                  '<% end %>' +
                '</div>' +
              '</div>'
          );
      });

      $('._comment-container, ._comment-edit-modal').mouseleave(function () {
          $('._comment-edit-modal').remove();
      });
  </script>
</div>