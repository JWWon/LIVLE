<footer class="_footer">
  <div class="_sns-container _hcenter-positioner">
    <%= link_to 'https://www.facebook.com/Livlemusic/' do %>
        <div class="_logo-container _vcenter-positioner">
          <%= image_tag "logo_facebook", class: "_logo-image" %>
        </div>
    <% end %>
    <div class="_logo-container _vcenter-positioner">
      <%= image_tag "logo_instagram", class: "_logo-image" %>
    </div>
  </div>

  <div class="_describe-container _vcenter-positioner _no-p-margin">
    <p class="_fs-4 _white _text-margin-right" id="render-contact">Contact Us</p>
    <p class="_fs-4 _white _text-margin-right">About</p>
    <p class="_fs-4 _white" id="render-notice">Notice</p>
  </div>

  <div class="_location-container">
    <p class="_fs-5 _light-gray _f-line">경기도 성남시 분당구<br>삼평동 대왕판교289번길 20, 8</p>
  </div>

  <div class="_legal-term-container _vcenter-positioner _no-p-margin">
    <%= link_to mypage_terms_of_use_path do %>
        <div class="_fs-4 _white _text-margin-right">Term of Service</div>
    <% end %>
    <%= link_to mypage_privacy_policy_path do %>
        <div class="_fs-4 _white">Privacy Policy</div>
    <% end %>
  </div>
  <script>
      $('#render-contact').on('click', function () {
          $('#footer-modal').remove();
          $('footer').append(
              '<div id="footer-modal">' +
              '<%= j render partial: "mypage/settings_contact_desktop" %>' +
              '</div>'
          );
      });

      $('#render-notice').on('click', function () {
          $('#footer-modal').remove();
          $('footer').append(
              '<div id="footer-modal">' +
              '<%= j render file: "notices/index_desktop.html.erb" %>' +
              '</div>'
          );
      });

      //works like modal
      $('body').on('click', function (e) {
          if(!$(e.target).hasClass('._desktop-modal')) {
              $('#footer-modal').remove();
          }
      }).find('._desktop-modal, ._describe-container').on('click', function (e) {
          e.stopPropagation();
      });
  </script>
</footer>