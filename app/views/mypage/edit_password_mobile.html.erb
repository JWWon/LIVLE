<div id="mypage-edit-password-mobile">
  <div class="_body-background-m"></div>

  <div class="_mypage-title-container-m _hcenter-positioner _vcenter-positioner">
    <p class="_fs-2-mobile _white"><%= user_signed_in? ? "비밀번호 변경" : "로그인"%></p>
  </div>
  <!-- back button -->
  <%= link_to mypage_index_path, class: "_show-video-back-container-m" do %>
      <%= image_tag("icon_back", style: "width: 3rem; height: auto;") %>
  <% end %>
  <hr>

  <div class="password-input-container">
    <%= form_for current_user, url: user_registration_path, remote: true do |f| %>
        <!-- save button -->
        <div class="save-button">
          <%= f.submit "완료", class: "_fs-4-mobile _white _f-letter-mobile" %>
        </div>

        <div class="error-message"></div>
        <p class="_fs-3-mobile _white _f-letter-mobile">기존 비밀번호</p>
        <div class="password-input-field">
          <%= f.password_field :current_password, placeholder: "기존 비밀번호를 입력해주세요", class: "input-field _fs-3-mobile _white" %>
        </div>

        <p class="_fs-3-mobile _white _f-letter-mobile">새로운 비밀번호</p>
        <div class="password-input-field">
          <%= f.password_field :password, :autocomplete => "off", placeholder: "새로운 비밀번호를 입력해주세요", class: "input-field _fs-3-mobile _white" %>
        </div>
        <div class="new-password-error"></div>

        <p class="_fs-3-mobile _white _f-letter-mobile">새로운 비밀번호 확인</p>
        <div class="password-input-field">
          <%= f.password_field :password_confirmation, placeholder: "새로운 비밀번호를 입력해주세요", class: "input-field _fs-3-mobile _white" %>
        </div>
        <div class="new-password-confirmation-error"></div>
    <% end %>
  </div>
</div>