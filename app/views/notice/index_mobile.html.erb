<header>
  <div class="row">
    <%= link_to mypage_settings_path do %>
        <%= image_tag 'icon_back_black.png', class: "mypage-back-button" %>
    <% end %>
    <div class="col-xs-offset-4 col-xs-4">
      <div class="text-center">
        <h1>공지사항</h1>
      </div>
    </div>
  </div>
</header>

<section id="notice">
  <div class="row mypage-settings-background"></div>
  <% @notices.each do |notice| %>
    <div class="mypage-notice-container">
      <p class="black-title"><%= notice.title %></p>
      <p class="gray-content"><%= notice.content %></p>
    </div>
  <% end %>
</section>
