<div id="mypage-notice-mobile">
  <%= render partial: '/mypage/top_mobile', locals: {title: "공지사항"}  %>

  <% @notices.each do |notice| %>
    <div class="notice-container">
      <div class="_vcenter-positioner">
        <p class="title-width _fs-2-mobile _white"><%= notice.title %></p>
        <p class="_fs-4-mobile _light-gray"><%= notice.created_at.strftime("%m/%d") %></p>
      </div>
      <p class="_fs-3-mobile _white"><%= notice.content %></p>
    </div>
  <% end %>
</div>
